{
	"linters": {
		"disable-all": true,
		"enable": [
			"goimports",
			"gofmt",
			"misspell",
			"revive",
			"prealloc"
		]
	},
	"issues": {
		"exclude-files": [
			"/zz_generated_"
		]
	},
	"run": {
		"timeout": "5m"
	},
	"linters-settings": {
		"goimports": {
			"local-prefixes": "github.com/harvester/harvester-csi-driver"
		}
	}
}
